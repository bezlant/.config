[user]
  name = bezlant

[help]
	autocorrect = 1

[core]
	editor = nvim
	pager = delta

[delta]
	features = decorations
	light = false
	tabs = 2
	line-numbers = true
	navigate = true
	hyperlinks = true

[color]
	branch = auto
	diff = auto
	status = auto

[init]
	defaultBranch = main

[rebase]
	autoStash = true

[diff]
	tool = vimdiff

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
